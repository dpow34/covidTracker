<center><h1>Vaccines Administered Tracker</h1></center>
<center><form id="addVac" action="/manufacturers" method="post" style="margin:10;float:left;width: 30%">
      <h3>ADD VACCINE</h3>
      <label for="cert">Administered:</label>
      <input type="radio" id="administered" name="administered" value="True">True
      <input type="radio" id="administered" name="administered" value="False">False<br>
      <input type="submit" value="Submit">
  </form>
  </center>
  <center><form style="float:right;width: 40%">
   <label for="patID">Manufacturer ID:</label>
     <input type="text" id="manufactID" name="manufactID"><br>
     <input type="submit" value="Delete">
 </form>
 </center>
 <center><form id="form"> 
   <input type="search" id="query" name="q" placeholder="Search...">
   <button>Search</button>
 </form></center>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
<TABLE style="margin: 0px auto;" BORDER="5"    WIDTH="90%"   CELLPADDING="4" CELLSPACING="3">
   <TR>
      </TH>
   </TR>
   <TR>
      <TH>Manufacturer ID</TH>
      <TH>Administered</TH>
   </TR>
   {{#each manufacturers}}
   <TR ALIGN="CENTER">
      <TD>{{manufactID}}</TD>
      <TD>{{administered}}</TD>
      <td><button onclick="deletePerson({{id}})">Delete</button></td>
   </TR>
   {{/each}}
   </TR>
</TABLE> 
</body>  

