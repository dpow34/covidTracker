    <TABLE style="margin: 0px auto;" BORDER="5"    WIDTH="90%"   CELLPADDING="4" CELLSPACING="3">
   <TR>
      </TH>
   </TR>
   <TR>
      <TH>Clinician ID</TH>
      <TH>Clinic ID</TH>
      <TH>Clinician Name</TH>
      <TH>Date of Birth</TH>
      <TH>Sex</TH>
      <TH>Email</TH>
      <TH>Phone Number</TH>
      <TH>Certified</TH>
   </TR>
   {{#each clinicians}}
   <TR ALIGN="CENTER">
      <TD>{{clinicianID}}</TD>
      <TD>{{clinicID}}</TD>
      <TD>{{name}}</TD>
      <TD>{{dob}}</TD>
      <TD>{{sex}}</TD>
      <TD>{{email}}</TD>
      <TD>{{phone}}</TD>
      <TD>{{certification}}</TD>
      <td><button onclick="deleteClinician({{clinicianID}})">Delete</button></td>
      <td><a href="/people/{{id}}">Update</a></td>
   </TR>
   {{/each}}
</TABLE> 
