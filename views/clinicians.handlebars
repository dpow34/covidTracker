      <TD>{{clinicianID}}</TD>
      <TD>{{clinicID}}</TD>
      <TD>{{name}}</TD>
      <TD>{{dob}}</TD>
      <TD>{{sex}}</TD>
      <TD>{{email}}</TD>
      <TD>{{phone}}</TD>
      <TD>{{certification}}</TD>
      <td><button onclick="deleteClinician({{clinicianID}})">Delete</button></td>
      <td><a href="/clinicians/{{clinicianID}}">Update</a></td>
   </TR>
   {{/each}}
</TABLE> 
